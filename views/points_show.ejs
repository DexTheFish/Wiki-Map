<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <!-- Other CSS-->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css"
    integrity="sha512-hoalWLoI8r4UszCkZ5kL8vayOGVae1oxXe/2A4AO6J9+580uKHDO3JdHb7NzwwzK5xr/Fs0W40kiNHxM9vyTtQ=="
    crossorigin=""/>

    <!-- Scripts -->
    <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js"
    integrity="sha512-BB3hKbKWOc9Ez/TAwyWxNXeoV9c1v6FIeYiBieIWkpLjauysF18NzgR1MBNBXf8/KABdlkX68nAhlwcDFLGPCQ=="
    crossorigin=""></script>
  </head>

    <title>Rosette</title>
  </head>

  <body>
    <!--HEADER BEGINS-->
    <%- include('partials/_header') %>
    <!--HEADER ENDS-->

    <main style="margin: 1em;">
      <h3>Edit or Delete Point: <%= point_name %> </h3>

      <form method="POST" action="/points/<%= point_id %>/edit">
        <div class="form-group">
          <label for="inputName">Change name</label>
          <input class="form-control" name="name" aria-describedby="emailHelp" value="<%= point_name %>">
        </div>

        <div class="form-group">
          <label for="inputDescription">description</label>
          <input class="form-control" name="description" value="<%= description %>">
        </div>

        <div class="form-group">
          <label for="inputImage">image</label>
          <input class="form-control" name="img_url" value="<%=img_url%>" >
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
      </form>

      <form method="POST" action="/points/<%=point_id%>/delete">
          <button type="submit" class="btn btn-danger">Delete</button>
      </form>

      <div id="map" style="height: 360px; width: 720px">
        <script>
          var map = L.map('map').setView([51.505, -0.09], 13); // [lat, long],
          L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
          maxZoom: 19,
          attribution: 'Â© OpenStreetMap'
      }).addTo(map);
        </script>
      </div>
    </main>

      <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
