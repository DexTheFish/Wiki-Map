<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

    <!--Jquery-->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>

    <!-- Interal CSS -->
    <link rel="stylesheet" href="/styles/forms.css" type="text/css" />  
    
    <!-- Load Leaflet from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css" crossorigin="" />
    <script src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js" crossorigin=""></script>

    <!-- Load Esri Leaflet from CDN -->
    <script src="https://unpkg.com/esri-leaflet@^3.0.8/dist/esri-leaflet.js"></script>
    <script src="https://unpkg.com/esri-leaflet-vector@3.1.3/dist/esri-leaflet-vector.js"></script>

    <!-- Load Esri Leaflet Geocoder from CDN -->
    <link rel="stylesheet" href="https://unpkg.com/esri-leaflet-geocoder@^3.0.0/dist/esri-leaflet-geocoder.css"">
    <script src="https://unpkg.com/esri-leaflet-geocoder@^3.0.0/dist/esri-leaflet-geocoder.js"></script>
    
    <!-- Load Internal ArcGIS Initialization -->
    <script type="text/javascript" src="/scripts/maps_initialize.js"></script>

    <script type="text/javascript" src="/scripts/maps_show.js"></script>

    <title>Map</title>

    </head>

  <body>
      <%- include('partials/_header') %>

      <main class="card" style="margin: 5%;">
        <div id="map" style="height: 45em; width: 100%" class=""></div>
        <div class="card-body">
            <h5 class="card-title"><%= map_name %></h5>
            <p class="card-text"><%= description %></p>
            <p class="card-text">Map created by: <%= creator_name %></p>
            <% if (id) { %>
              <a href="/maps/<%= map_id %>/edit" class="btn btn-primary">Edit</a>
              <form input style="display: inline;" method="POST" action="/maps/<%= map_id %>/favs">
                <button type="submit" class="btn btn-primary">Add to Favourites</button>
              </form>
              <% } %>
              <a href="/maps" class="btn btn-secondary">Return to Maps</a>
        </div>
        <!-- list the points on the map -->
        <section class="card-body">
          <h6>List of Points</h6>
          <% for (const point of points) {%>
            <a href="/points/<%=point.id%>"><%=point.name%></a>
          <%}%>
          <% if (points.length === 0) {%>
            <p>No points added yet.</p>
          <%}%>
  
        </section>
      </main>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
    <!-- Leaflet JS-->
    <script>
      var points = <%- JSON.stringify(points) %>;
      var map_id = <%- JSON.stringify(map_id) %>;
    </script>
  </body>
  </html>
